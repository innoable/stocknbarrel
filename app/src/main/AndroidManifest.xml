<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.innoble.stocknbarrel">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <receiver
            android:name=".service.BootBroadcastReceiver"
            android:enabled="true" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.SearchResultActivity"
            android:label="@string/search_activity_label"
            android:launchMode="singleTop"
            android:parentActivityName=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <provider
            android:name=".provider.StockNBarrelContentProvider"
            android:authorities="com.innoble.stocknbarrel.contentprovider"
            android:enabled="true"
            android:exported="true" />

        <provider
            android:authorities="com.innoble.stocknbarrel.remoteprovider"
            android:name=".provider.RemoteContentProvider"/>

        <activity
            android:name=".ui.RegisterActivity"
            android:label="@string/title_register_activity" />
        <activity
            android:name=".ui.ProductDetailActivity"
            android:configChanges="keyboardHidden"
            android:parentActivityName=".ui.SearchResultActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".ui.DescriptionActivity" />
        <activity android:name=".ui.ProductDetailsImageSlider"></activity>

        <receiver
            android:name=".service.NearbyStoreAlarmReceiver"
            android:process=":remote" >
        </receiver>

        <service
            android:name=".service.NearbyStoreService"
            android:exported="false" />

        <service
            android:name=".service.NearbyPlacesService"
            android:exported="false" />

        <service
            android:name=".service.MyInstanceIDListenerService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>


        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyDSIoF33lLUo4UsFD5fsOp8vPmlDtxpwIQ"/>
    </application>

</manifest>