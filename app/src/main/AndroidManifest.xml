<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.innoble.stocknbarrel" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".utils.TrackedApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.SearchResultActivity"
            android:parentActivityName=".ui.MainActivity"
            android:label="@string/search_activity_label"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <provider
            android:name=".database.StockNBarrelContentProvider"
            android:authorities="com.innoble.stocknbarrel.contentprovider"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".ui.RegisterActivity"
            android:label="@string/title_register_activity" />
        <activity android:name=".ui.ProductDetailActivity"
            android:parentActivityName=".ui.SearchResultActivity">
        </activity>
    </application>

</manifest>